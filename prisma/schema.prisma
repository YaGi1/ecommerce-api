generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id          String   @id @default(cuid())
  name        String   @db.VarChar(50)
  priceCents  Int
  stock       Int
  isAvailable Boolean  @default(true)
  deletedAt   DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isAvailable])
  @@index([deletedAt])
}